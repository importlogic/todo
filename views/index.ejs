<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap  -->
    <link rel="stylesheet" href="css/bootstrap.min.css">


    <!-- CSS  -->
    <link rel="stylesheet" href="css/styles.css">

    <!-- RemixIcons  -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <title>ToDo List</title>
</head>
<body>
    <h1>ToDo List</h1>
    <div class="container-fluid list-items">
        <ul class="list-group">
            <% for(var i = 0; i < toDoList.length; i++){ %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= toDoList[i] %>
                </li>
            <% } %>
        </ul>
    </div>

    <div class="container-fluid">
        <form action="/" method="POST">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="New Task" aria-describedby="button-addon2" name="newTask">
                    <button class="btn btn-primary" type="submit" id="button-addon2">Add Task</button>
                </div>
            </div>
        </form>
    </div>

    <form action="/clear" method="POST">
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="ri-delete-bin-line"></i> Clear List</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-body">Do you want to clear the list?</div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Yes</button>
                </div>
              </div>
            </div>
        </div>
    </form>


    <div class="show-alert">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
            <label class="form-check-label" for="flexSwitchCheckChecked">Show Alerts</label>
        </div>
    </div>

    <div class="alert alert-dismissible alert-success toast-msg hidden success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Successful!</strong> New task added
    </div>

    <div class="alert alert-dismissible alert-success toast-msg hidden clear">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Successful!</strong> List Cleared
    </div>

    <div class="alert alert-dismissible alert-primary toast-msg hidden error">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Oh snap!</strong> Cannot add an empty task
    </div>

</body>
</html>


